<div class="leaderboard">
  <h1>Leaderboard</h1>

  <table class="topic-list">
    <thead>
      <tr class="topic-list-item">
        <th>Rank</th>
        {{#each col in model.board_query.columns}}
          <th>{{col}}</th>
        {{/each}}
      </tr>
    </thead>
    <tbody>
      {{#each model.board_query.data as |user index|}}
        <tr class="topic-list-item">
          <td>{{inc index}}</td>
          {{#each field in user}}
            <td>{{field}}</td>
          {{/each}}
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
